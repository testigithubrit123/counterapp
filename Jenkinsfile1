pipeline {
  agent any

  environment {
    GOOGLE_APPLICATION_CREDENTIALS = credentials('gcp-sa-key')
    PROJECT_ID = 'sunny-cider-459704-j1'
    CLUSTER_NAME = 'demok8cluster'       // Replace this
    CLUSTER_ZONE = 'us-central1'           // Replace this
  }

  stages {
    stage('Build Docker Image') {
      steps {
        sh '''
          docker build -t app:1.0 .
        '''
      }
    }

    stage('Push to Artifact Registry') {
      steps {
        sh '''
          docker tag app:1.0 us-central1-docker.pkg.dev/	sunny-cider-459704-j1/democlass2/app:1.0
          docker push us-central1-docker.pkg.dev/	sunny-cider-459704-j1/democlass2/app:1.0
        '''
      }
    }

    stage('Connect to GKE') {
      steps {
        sh '''
          gcloud auth activate-service-account --key-file=$GOOGLE_APPLICATION_CREDENTIALS
          gcloud config set project sunny-cider-459704-j
          gcloud container clusters get-credentials demok8cluster --zone 	us-central1
          kubectl get nodes
        '''
      }
    }

    stage('Deploy to GKE') {
      steps {
        sh '''
          kubectl apply -f k8s/deployment.yaml
          kubectl apply -f k8s/service.yaml
        '''
      }
    }

    stage('Verify Deployment') {
      steps {
        sh '''
          kubectl get pods
          kubectl get svc
        '''
      }
    }
  }
}
